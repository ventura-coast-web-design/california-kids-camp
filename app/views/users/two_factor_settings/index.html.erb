<div class="page-header">
  <div class="text-center">
    <div class="icon-container mb-4">
      <i class="fa-solid fa-shield-halved text-4xl text-primary"></i>
    </div>
    <h1 class="page-title">Security Settings</h1>
    <p class="page-subtitle">Manage your account security preferences</p>
  </div>
</div>

<div class="content-section">
  <div class="section-header">
    <h2 class="section-title">Two-Factor Authentication</h2>
  </div>
  
  <div class="section-content">
    <div class="security-card">
      <div class="security-card-header">
        <div class="security-icon">
          <i class="fa-solid fa-lock"></i>
        </div>
        <div class="security-info">
          <h3 class="security-title">Email Verification</h3>
          <p class="security-description">
            Protect your account with email-based two-factor authentication. 
            You'll receive a verification code via email each time you sign in.
          </p>
        </div>
      </div>

      <div class="security-card-body">
        <div class="security-status">
          <% if current_user.otp_required_for_login? %>
            <div class="status-badge status-active">
              <i class="fa-solid fa-check-circle"></i>
              <span>Active</span>
            </div>
          <% else %>
            <div class="status-badge status-inactive">
              <i class="fa-solid fa-times-circle"></i>
              <span>Inactive</span>
            </div>
          <% end %>
        </div>

        <div class="security-actions">
          <%= form_with url: users_two_factor_settings_path, method: :patch, local: true do |f| %>
            <%= hidden_field_tag :enabled, !current_user.otp_required_for_login? %>
            
            <% if current_user.otp_required_for_login? %>
              <%= button_tag type: "submit", class: "btn btn-danger", 
                  data: { confirm: "Are you sure you want to disable two-factor authentication?" } do %>
                <i class="fa-solid fa-toggle-off"></i>
                Disable 2FA
              <% end %>
            <% else %>
              <%= button_tag type: "submit", class: "btn btn-success" do %>
                <i class="fa-solid fa-toggle-on"></i>
                Enable 2FA
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>

      <% if current_user.otp_required_for_login? %>
        <div class="security-card-footer">
          <div class="alert alert-info">
            <i class="fa-solid fa-info-circle"></i>
            <div>
              <strong>Important:</strong> With 2FA enabled, you'll receive a verification code 
              at <strong><%= current_user.email %></strong> each time you sign in.
              <br>
              <small class="text-sm">Codes expire after <%= (User::OTP_EXPIRY_TIME / 60).to_i %> minutes.</small>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="security-tips">
      <h4 class="tips-title">Security Tips</h4>
      <ul class="tips-list">
        <li>
          <i class="fa-solid fa-shield-alt text-success"></i>
          Enable two-factor authentication for an extra layer of security
        </li>
        <li>
          <i class="fa-solid fa-envelope text-primary"></i>
          Make sure you have access to your registered email address
        </li>
        <li>
          <i class="fa-solid fa-key text-warning"></i>
          Never share your verification codes with anyone
        </li>
        <li>
          <i class="fa-solid fa-clock text-info"></i>
          Verification codes expire after 10 minutes for security
        </li>
      </ul>
    </div>
  </div>
</div>

