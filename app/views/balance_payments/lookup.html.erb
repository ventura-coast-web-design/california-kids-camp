<div class="content-section">
  <div class="section-header">
    <h2 class="section-title">Pay Remaining Balance</h2>
  </div>
  
  <div class="section-content">
    <div class="form-container" style="max-width: 600px; margin: 0 auto;">
      <p class="mb-6" style="margin-bottom: 24px; color: #6b7280; font-size: 16px;">
        Enter the email address of the primary guardian to find your registration and pay the remaining balance.
      </p>

      <% if flash[:alert] %>
        <div class="bg-red-50 border border-red-200 text-red-800 rounded-lg p-4 mb-4">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <% if flash[:notice] %>
        <div class="bg-green-50 border border-green-200 text-green-800 rounded-lg p-4 mb-4">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <%= form_with url: balance_payment_lookup_path, method: :post, local: true do |f| %>
        <div class="form-group">
          <%= f.label :email, "Primary Guardian Email", class: "form-label" %>
          <%= f.email_field :email, class: "form-control", required: true, autofocus: true, placeholder: "your.email@example.com" %>
        </div>

        <div class="form-actions">
          <%= f.submit "Find Registration", class: "btn btn-primary", style: "width: 100%;" %>
        </div>
      <% end %>

      <div class="mt-6 text-center" style="margin-top: 24px;">
        <%= link_to "Back to Home", root_path, class: "text-blue-600 hover:text-blue-800" %>
      </div>
    </div>
  </div>
</div>
