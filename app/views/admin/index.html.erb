                          Paid: $<%= sprintf('%.2f', registration.calculate_per_attendee_paid) %><br>
                          Total: $<%= sprintf('%.2f', registration.calculate_per_attendee_total) %>
                          <% if registration.pricing_type == 'early_bird' %>
                            <br><span class="text-green-600">Early Bird</span>
                          <% end %>
                        </div>
                      <% elsif registration.paid_deposit? %>
