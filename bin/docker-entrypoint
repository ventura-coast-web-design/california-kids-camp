#!/bin/bash -e

# If running the web server, run only db:prepare so we listen quickly.
# Full migrations and extra DBs (cache/queue/cable) run in release_command (bin/fly-release).
if ( [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ] ) || \
   ( [ "$1" == "bundle" ] && [ "$2" == "exec" ] && [ "$3" == "puma" ] ); then
  ./bin/rails db:prepare || true
fi

exec "${@}"
