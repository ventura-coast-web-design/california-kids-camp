<div class="content-section">
  <div class="container">
    <div class="section-header">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
        <h2 class="section-title" style="margin-bottom: 0;">Counselor Registration Details</h2>
        <div style="display: flex; gap: 0.5rem;">
          <a href="<%= admin_path %>" class="btn btn-outline" style="padding: 0.5rem 1rem;">
            ‚Üê Back to Dashboard
          </a>
          <% if @counsellor.archived? %>
            <%= button_to "Delete Counselor", admin_delete_counsellor_path(@counsellor), 
                method: :delete, 
                class: "btn btn-danger", 
                style: "padding: 0.5rem 1rem;",
                data: { 
                  turbo_confirm: "Are you sure you want to PERMANENTLY DELETE #{@counsellor.first_name} #{@counsellor.last_name}? This action CANNOT be undone. Make sure refunds have been processed.",
                  turbo: false 
                } %>
          <% else %>
            <%= button_to "Archive Counselor", admin_archive_counsellor_path(@counsellor), 
                method: :post, 
                class: "btn btn-warning", 
                style: "padding: 0.5rem 1rem;",
                data: { 
                  turbo_confirm: "Are you sure you want to archive #{@counsellor.first_name} #{@counsellor.last_name}? They will be moved to the archived list where they can be permanently deleted after refunds are processed.",
                  turbo: false 
                } %>
          <% end %>
          <%= button_to "Logout", admin_logout_path, method: :delete, class: "btn btn-outline", style: "padding: 0.5rem 1rem;", data: { turbo: false } %>
        </div>
      </div>
      <p style="color: #6b7280; margin-top: 0.5rem;">
        Registered on <%= @counsellor.created_at.in_time_zone("Pacific Time (US & Canada)").strftime("%B %d, %Y at %I:%M %p %Z") %>
      </p>
    </div>
    
    <div class="section-content">
      <div class="counsellor-cards-container">
        <!-- Counselor Card -->
        <div class="detail-card counsellor-card">
          <div class="detail-card-header">
            <h3 style="margin: 0; color: #2c5f2d;">
              Counselor Information
            </h3>
          </div>
          
          <div class="detail-card-body">
            <div class="detail-grid">
              <!-- Personal Information -->
              <div class="detail-section">
                <h4 class="detail-section-title">Personal Information</h4>
                <div class="detail-row">
                  <span class="detail-label">Name:</span>
                  <span class="detail-value">
                    <%= @counsellor.first_name %> <%= @counsellor.last_name %>
                  </span>
                </div>
                <div class="detail-row">
                  <span class="detail-label">Gender:</span>
                  <span class="detail-value"><%= @counsellor.gender %></span>
                </div>
                <div class="detail-row">
                  <span class="detail-label">Ecclesia:</span>
                  <span class="detail-value"><%= @counsellor.ecclesia %></span>
                </div>
              </div>

              <!-- Contact Information -->
              <div class="detail-section">
                <h4 class="detail-section-title">Contact Information</h4>
                <div class="detail-row">
                  <span class="detail-label">Email:</span>
                  <span class="detail-value"><%= @counsellor.email %></span>
                </div>
                <div class="detail-row">
                  <span class="detail-label">Phone:</span>
                  <span class="detail-value"><%= @counsellor.phone %></span>
                </div>
                <div class="detail-row">
                  <span class="detail-label">Address:</span>
                  <span class="detail-value">
                    <%= @counsellor.address_line_1 %><br>
                    <%= @counsellor.city %>, <%= @counsellor.state_province_region %> <%= @counsellor.postal_code %><br>
                    <%= @counsellor.country %>
                  </span>
                </div>
              </div>

              <!-- Camp Details -->
              <div class="detail-section">
                <h4 class="detail-section-title">Camp Details</h4>
                <div class="detail-row">
                  <span class="detail-label">T-Shirt Size:</span>
                  <span class="detail-value"><%= @counsellor.tshirt_size %></span>
                </div>
                <div class="detail-row">
                  <span class="detail-label">Piano:</span>
                  <span class="detail-value"><%= @counsellor.piano %></span>
                </div>
              </div>

              <!-- Pairing Information -->
              <% if @counsellor.requested_pairing_name.present? || @counsellor.requested_pairing_with.present? %>
                <div class="detail-section">
                  <h4 class="detail-section-title">Pairing Request</h4>
                  <% if @counsellor.requested_pairing_name.present? %>
                    <div class="detail-row">
                      <span class="detail-label">Requested Pairing With:</span>
                      <span class="detail-value"><%= @counsellor.requested_pairing_name %></span>
                    </div>
                  <% end %>
                  <% if @counsellor.requested_pairing_with.present? %>
                    <div class="detail-row">
                      <span class="detail-label">Pairing Indices:</span>
                      <span class="detail-value"><%= @counsellor.requested_pairing_with %></span>
                    </div>
                  <% end %>
                </div>
              <% end %>

              <!-- Squirts Information -->
              <% if @counsellor.squirts.present? %>
                <div class="detail-section">
                  <h4 class="detail-section-title">Registered Children (Squirts)</h4>
                  <div class="detail-row">
                    <span class="detail-value">
                      <%= @counsellor.squirts_display %>
                    </span>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .counsellor-cards-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
    margin-top: 1rem;
  }

  .detail-card {
    background: #ffffff;
    border-radius: 12px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .counsellor-card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .counsellor-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  }

  .detail-card-header {
    background-color: #f9fafb;
    padding: 1.5rem;
    border-bottom: 2px solid #e5e7eb;
  }

  .detail-card-body {
    padding: 1.5rem;
  }

  .detail-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .detail-section {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .detail-section-title {
    color: #2c5f2d;
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #2c5f2d;
  }

  .detail-row {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .detail-label {
    font-weight: 600;
    color: #6b7280;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .detail-value {
    color: #1f2937;
    font-size: 1rem;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .counsellor-cards-container {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .detail-card-header,
    .detail-card-body {
      padding: 1rem;
    }
  }
</style>
